{
    "name"              : "Coub Chrome Extention beta.",
    "description": "Coub.com you chanells notification manage. Some tools.",
    "browser_action"    : {
		"default_icon"  : "icon.png",
		"default_popup" : "popup.html",
		"default_title" : "Coub Chrome Extention beta."
	},
	"background": {
		"page"          : "background.html"
	},
    "permissions"       : ["tabs"],
	"options_page"      : "options.html",
    "content_scripts": [
      {
        "matches"       : ["http://coub.com/*"],
        "css"           : ["ext.css"],
        "js"            : ["ext.js"]
      }
	],
    "manifest_version"  : 2,
    "version"           : "0.6",
    "icons"             : {
        "128"           : "icon.png",
        "777"           : "icon_connect.png"
    }
}