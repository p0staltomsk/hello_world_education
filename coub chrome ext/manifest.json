{
    /* Name */
    "name": "Coub Chrome Extention [player/tools/etc.]",

    /* Desc */
    "description": "Coub.com you chanells notification manage. Some tools.",

    /* Actions */
    "browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Coub Crome extention"
	},
    /*
     "page_action" :
     {
       "default_icon" : "icon_connect.png",
       "default_title" : "There's a 'coub.com' in this URL!"
     },
     */

    /*  */
	"background": {

        /* Two way's */

		"page": "background.html"

        /*"persistent": false,
        "scripts": ["sample.js"]*/
	},

    /*  */
    "permissions": ["tabs"], /*, "contextMenus", "downloads", "downloads.open", "downloads.shelf"*/

    /*  */
	"options_page": "options.html",

    /*  */
    "content_scripts": [
      {
        "matches": ["http://coub.com/*"],
        "css": ["ext.css"],
        "js": ["ext.js"]
      }
	],

    /*  */
    "manifest_version": 2,
    "version": "0.555",

    /*  */
    "icons": {
        "128": "icon.png",
        "777": "icon_connect.png"
    }
}